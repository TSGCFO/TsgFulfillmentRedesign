# Example Environment Configuration
# Copy this file to .env.development or .env.test and fill in your values

# Environment
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database_name

# Server Configuration
PORT=3001
HOST=localhost

# API Configuration
API_URL=http://localhost:3001/api
VITE_API_URL=http://localhost:3001/api

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# JWT Configuration
JWT_SECRET=your_secure_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# HubSpot Configuration
HUBSPOT_ACCESS_TOKEN=your_hubspot_access_token
HUBSPOT_CLIENT_ID=your_hubspot_client_id
HUBSPOT_CLIENT_SECRET=your_hubspot_client_secret
HUBSPOT_REDIRECT_URI=http://localhost:3001/auth/hubspot/callback
HUBSPOT_PORTAL_ID=your_hubspot_portal_id

# DocuSign Configuration
DOCUSIGN_INTEGRATION_KEY=your_docusign_integration_key
DOCUSIGN_USER_ID=your_docusign_user_id
DOCUSIGN_ACCOUNT_ID=your_docusign_account_id
DOCUSIGN_PRIVATE_KEY_PATH=./keys/docusign-private.key
DOCUSIGN_BASE_PATH=https://demo.docusign.net/restapi

# Supabase Configuration
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
EMAIL_FROM=noreply@yourcompany.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/application.log

# Cache Configuration (Redis)
REDIS_URL=redis://localhost:6379/0

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your_secure_session_secret

# Feature Flags
ENABLE_DEBUG_MODE=false
ENABLE_API_LOGGING=false
ENABLE_QUERY_LOGGING=false