# Database Configuration
DATABASE_URL=postgresql://username:password@hostname:port/database_name

# Session Configuration
SESSION_SECRET=your-session-secret-here

# Optional: Supabase Configuration (if using)
SUPABASE_URL=your-supabase-url
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# Environment
NODE_ENV=production
PORT=5000

# Feature Flags Configuration
# Control feature availability across different environments
# Supported values: true/false, 1/0, yes/no, on/off, enabled/disabled

# UI Features
# Enable the new enhanced employee portal dashboard with improved analytics
FEATURE_UI_NEW_DASHBOARD=false

# Search Features
# Enable enhanced search functionality with filters and auto-complete
# Requires FEATURE_PERFORMANCE_CACHING to be enabled for optimal performance
FEATURE_SEARCH_ENHANCED_SEARCH=false

# Integration Features
# Enable DocuSign integration for digital contract signing (Admin+ only)
# Available in staging and production environments only
FEATURE_INTEGRATION_DOCUMENT_SIGNING=false

# Enable HubSpot API v2 integration with improved contact management (Admin+ only)
# Requires FEATURE_PERFORMANCE_CACHING to be enabled
FEATURE_INTEGRATION_HUBSPOT_V2=false

# Performance Features
# Enable Redis-based caching system for improved application performance
# Enabled by default - required by other features for optimal performance
FEATURE_PERFORMANCE_CACHING=true